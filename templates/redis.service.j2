[Unit]
Description=Redis persistent key-value database
After=network.target

[Service]
ExecStart=/usr/bin/redis-server {{redis_conf_file_location}}/redis.conf --supervised systemd
ExecStop=/bin/redis-cli -h {{ redis_bind }} -p 7000 shutdown
Type=notify
User=redis
Group=redis
RuntimeDirectory={{redis_runtime_directory}}
RuntimeDirectoryMode=0755
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target