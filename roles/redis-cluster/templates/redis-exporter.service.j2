[Unit]
Description=Redis exporter for monitoring
After=network.target

[Service]
{% if redis_password is defined %}
Environment=REDIS_PASSWORD={{ redis_password }}
{% endif %}
ExecStart=/usr/local/bin/redis_exporter --redis.addr {{ ansible_ssh_host }} --web.listen-address 0.0.0.0:{{ exporter_port }}
ExecStop=/bin/kill -s TERM $MAINPID
Type=simple
User=redis
Group=redis
RuntimeDirectory={{ redis_runtime_directory }}
RuntimeDirectoryMode=0755
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
